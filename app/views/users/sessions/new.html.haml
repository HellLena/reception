= content_for :header do
  Электронная приёмная

.container
  .row
    .col-sm-6.col-md-4.col-md-offset-4
      .account-wall
        %img.profile-img{:alt => "", :src => "/assets/login.png"}
          = form_for(resource, as: resource_name, url: session_path(resource_name), :html => { :class => 'form-signin'}) do |f|
            = f.text_field :email, :class => 'form-control', :autofocus => "true", :placeholder => "Email", :required => "required", :type => "email"
            = f.text_field :password, :class => 'form-control', :autocomplete => "off", :placeholder => "Пароль", :required => "required", :type => "password"
            = f.submit 'Войти', :class => 'btn btn-lg btn-primary btn-block', :type => "submit"
            - if devise_mapping.rememberable?
              = f.check_box :remember_me
              = f.label :remember_me, 'Запомнить меня'
            -#= render "users/shared/links"

