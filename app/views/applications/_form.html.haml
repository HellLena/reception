= bootstrap_form_for @application do |f|
  - if @application.errors.any?
    #error_explanation
      %h2= "#{pluralize(@application.errors.count, "error")} prohibited this application from being saved:"
      %ul
        - @application.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.text_field :applicant, :label => "ФИО"

  .form-group
    %label
      Вид обращения
    = select_tag :appeal_type, options_from_collection_for_select(@appeal_types, "id", "name"), :include_blank => true

  .form-group
    = f.text_area :subject, :label => "Суть обращения"

  .form-group
    = f.text_area :contacts, :label => "Контакты для обратной связи"

  .actions
    = f.submit 'Сохранить', :class => 'btn btn-primary btn-sm'
    = button_to 'Отмена', applications_path, :class => 'btn btn-default btn-sm btn-inline', :method => :get
